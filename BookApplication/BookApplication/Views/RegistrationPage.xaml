<Page x:Class="BookApplication.Views.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookApplication.Views"
      mc:Ignorable="d" 
      Title="RegistrationPage" Height="600" Width="1080" Background="White">

    <Grid Height="600" Width="1080">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"/>

        <TextBox x:Name="loginTextBox" HorizontalAlignment="Left" Margin="402,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Button Click="RegistrationPageClick" Content="Регистрация" HorizontalAlignment="Left" Margin="308,424,0,0" VerticalAlignment="Top" Height="50" Width="412" FontSize="20"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="308,162,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Регистрация" HorizontalAlignment="Left" Margin="381,64,0,0" VerticalAlignment="Top" FontSize="45"/>
        <TextBox x:Name="passwordTextBox" HorizontalAlignment="Left" Margin="402,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="308,220,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="fullNameTextBox" HorizontalAlignment="Left" Margin="402,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="ФИО" HorizontalAlignment="Left" Margin="308,0,0,0" VerticalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="phoneTextBox" HorizontalAlignment="Left" Margin="402,349,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Телефон" HorizontalAlignment="Left" Margin="291,342,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="Есть аккаунт" HorizontalAlignment="Left" Margin="308,494,0,0" VerticalAlignment="Top" Height="50" Width="412" FontSize="20" Click="LoginPageClick"/>
    </Grid>
</Page>
