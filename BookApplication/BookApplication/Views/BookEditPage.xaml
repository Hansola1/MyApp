<Page x:Class="BookApplication.Views.BookEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookApplication.Views"
      mc:Ignorable="d" Height="600" Width="1080" Background="White">

    <Grid Height="600" Width="1080">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"/>
        <Label Content="Редактировать книгу" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="40" Width="408" Margin="0,81,0,0"/>

        <TextBox x:Name="artTextBox" HorizontalAlignment="Left" Margin="401,226,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Артикул" HorizontalAlignment="Left" Margin="302,223,0,0" VerticalAlignment="Top" FontSize="20"/>

        <ComboBox  x:Name="StatusSelector" Width="320" Height="38" HorizontalAlignment="Left" VerticalAlignment="Center"
                   Margin="401,0,0,0">
        </ComboBox>

        <Button Content="Применить" Click="EditBookClick"  HorizontalAlignment="Left" Margin="362,418,0,0" VerticalAlignment="Top" Height="61" Width="359" FontSize="20"/>
        <Button Content="Назад" Click="CancelClick"  HorizontalAlignment="Center" Margin="0,500,0,0" VerticalAlignment="Top" Height="61" Width="359" FontSize="20"/>
        <Label Content="Статус" HorizontalAlignment="Left" Margin="310,0,0,0" VerticalAlignment="Center" FontSize="20"/>
        <Label Content="Читатель" HorizontalAlignment="Left" Margin="294,337,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="readerTextBox" HorizontalAlignment="Left" Margin="401,344,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
    </Grid>
</Page>
