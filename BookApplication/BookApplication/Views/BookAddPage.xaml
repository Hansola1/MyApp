<Page x:Class="BookApplication.Views.BookAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookApplication.Views"
      mc:Ignorable="d" Height="600" Width="1080" Background="White">

    <Grid Height="600" Width="1080">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Panel.ZIndex="1"/>
        <Label Content="Добавить книгу" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="40" Width="408" Margin="354,0,0,0"/>

        <TextBox x:Name="artTextBox" HorizontalAlignment="Left" Margin="399,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Артикул" HorizontalAlignment="Left" Margin="305,78,0,0" VerticalAlignment="Top" FontSize="20"/>

        <TextBox x:Name="titleTextBox" HorizontalAlignment="Left" Margin="399,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Название" HorizontalAlignment="Left" Margin="292,140,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="genreTextBox" HorizontalAlignment="Left" Margin="399,205,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Жанр" HorizontalAlignment="Left" Margin="305,198,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="descriptionTextBox" HorizontalAlignment="Left" Margin="399,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Описание" HorizontalAlignment="Left" Margin="288,258,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="0.44,0.53"/>
        <TextBox x:Name="releaseDateTextBox" HorizontalAlignment="Left" Margin="399,303,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
        <Label Content="Дата создания" HorizontalAlignment="Left" Margin="252,300,0,0" VerticalAlignment="Top" FontSize="20"/>

        <ComboBox  x:Name="StatusSelector" Width="320" Height="38" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,346,361,0">
        </ComboBox>

        <Button Content="Добавить книгу" Click="AddBookClick"  HorizontalAlignment="Center" Margin="0,462,0,0" VerticalAlignment="Top" Height="61" Width="359" FontSize="20"/>
        <Button Content="Назад" Click="CancelClick"  HorizontalAlignment="Center" Margin="0,528,0,0" VerticalAlignment="Top" Height="61" Width="359" FontSize="20"/>
        <Label Content="Статус" HorizontalAlignment="Left" Margin="279,346,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Читатель" HorizontalAlignment="Left" Margin="279,397,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="readerTextBox" HorizontalAlignment="Left" Margin="401,404,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="30" FontSize="20"/>
    </Grid>
</Page>